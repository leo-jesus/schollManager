<div class="item">
    <div>URL Avatar</div>
    <div><input type="url" name="avatar_url" placeholder="https://" value="{{teacher.avatar_url}}"></div>
</div>

<div class="item">
    <div>Instructor</div>
    <div><input type="text" name="name" placeholder="Name of Instructor" value="{{teacher.name}}"></div>
</div>

<div class="item">
    <div>Birth date</div>
    <div><input type="date" name="birth" value="{{teacher.birth}}"></div>
</div>

<div class="item">
    <div>Graduation Level</div>
    <div>
        <select name="scholarity">
            <option value="" selected="selected">select your graduation</option>
            <option value="highscholl" {% if teacher.scholarity == "highscholl" %} selected {% endif %}>Highscholl degree</option>
            <option value="graduation" {% if teacher.scholarity == "graduation" %} selected {% endif %}>Graduation degree</option>
            <option value="master" {% if teacher.scholarity == "master" %} selected {% endif %}>Master degree</option>
            <option value="phd" {% if teacher.scholarity == "phd" %} selected {% endif %}>Doctorate degree</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Type of Class</div>

    <span><input type="radio" name="classType" value="remote" {% if teacher.classType == "remote" %} checked {% endif %}>remote class</span>
    <span><input type="radio" name="classType" value="presential" {% if teacher.classType == "presential" %} checked{% endif %}>presential class</span>
</div>

<div class="item">
    <div>Atuation area</div>
    <div><input type="text" name="atuationArea" placeholder="Divide your atuation by commas" value="{{teacher.atuationArea}}"> </div>
</div>

<button type="submit">Save</button>