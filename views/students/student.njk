{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
       
        <table width="100%">
            <thead>
                <tr>
                    <th>Student</th>
                    <th>Email</th>
                    <th>School Year</th>
                    <th>Action</th>

                </tr>
            </thead>
            <a href="/students/create">New</a>

            <tbody>
                {% for student in students %}
                    <tr>
                        <td>
                            <span style="background-image: url({{student.avatar_url}})"></span>
                            {{student.name}}</td>
                       <td>
                            {{student.email}}    
                       </td>
                       <td>
                           {{student.scholarYear}}
                       </td>
                       
                        <td>
                            <a href="/students/{{student.id}}">View</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}